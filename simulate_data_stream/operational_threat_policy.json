{
  "meta": {
    "name": "Operational Supply Chain Threat Policy",
    "scope": ["suppliers", "logistics_partners", "ports", "manufacturing_units"]
  },

  "threat_categories": {
    "natural_disaster": [
      "earthquake",
      "flood",
      "cyclone",
      "hurricane",
      "tsunami",
      "wildfire",
      "landslide",
      "volcanic eruption",
      "extreme rainfall",
      "heatwave"
    ],
    "logistics_disruption": [
      "port congestion",
      "port shutdown",
      "shipping delays",
      "container backlog",
      "rail disruption",
      "road blockade",
      "air cargo suspension",
      "border closure",
      "customs delay"
    ],
    "infrastructure_failure": [
      "power outage",
      "internet outage",
      "fuel shortage",
      "warehouse fire",
      "equipment failure"
    ],
    "labor_disruption": [
      "port strike",
      "transport strike",
      "factory strike",
      "union action",
      "worker walkout"
    ],
    "geopolitical_disruption": [
      "trade sanctions",
      "export ban",
      "import restriction",
      "armed conflict",
      "military escalation",
      "political unrest"
    ]
  },

  "severity_keywords": {
    "high": [
      "shutdown",
      "indefinite suspension",
      "severe damage",
      "operations halted",
      "force majeure declared",
      "critical infrastructure damaged",
      "state of emergency",
      "evacuation ordered",
      "major port closed"
    ],
    "medium": [
      "partial shutdown",
      "temporary suspension",
      "reduced capacity",
      "limited operations",
      "significant delay",
      "restricted movement"
    ],
    "low": [
      "minor delay",
      "short-term disruption",
      "localized impact",
      "monitoring situation",
      "operations resumed"
    ]
  },

  "location_validation_rules": {
    "must_match": [
      "supplier_country",
      "supplier_region",
      "port_region"
    ],
    "false_positive_indicators": [
      "event_in_foreign_country",
      "political_statement_only",
      "historical_event_reference",
      "no_physical_impact"
    ]
  },

  "operational_dependency_checks": {
    "high_risk_conditions": [
      "single_source_supplier",
      "high_port_dependency",
      "long_lead_time",
      "no_alternate_supplier"
    ],
    "mitigating_conditions": [
      "buffer_stock_available",
      "alternate_route_available",
      "multi_supplier_contract"
    ]
  },

  "classification_rules": {
    "valid_threat": {
      "conditions": [
        "location_match",
        "operational_category_detected",
        "physical_or_logistical_impact"
      ],
      "label": "Operationally Relevant"
    },
    "false_positive": {
      "conditions": [
        "false_positive_indicator_detected",
        "no_operational_dependency"
      ],
      "label": "Operationally Irrelevant"
    }
  },

  "severity_rules": {
    "high": {
      "trigger": [
        "high_severity_keywords",
        "critical_dependency_present",
        "multi_day_disruption"
      ],
      "action": "immediate_alert_and_contingency"
    },
    "medium": {
      "trigger": [
        "medium_severity_keywords",
        "partial_dependency_present"
      ],
      "action": "manual_review_and_monitor"
    },
    "low": {
      "trigger": [
        "low_severity_keywords",
        "mitigating_conditions_present"
      ],
      "action": "monitor_only"
    }
  },

  "actions": {
    "immediate_alert_and_contingency": "Trigger supply chain alert, notify procurement and logistics teams, evaluate alternate sourcing",
    "manual_review_and_monitor": "Escalate to risk analyst for impact assessment and timeline estimation",
    "monitor_only": "Log event and continue monitoring for escalation"
  }
}
